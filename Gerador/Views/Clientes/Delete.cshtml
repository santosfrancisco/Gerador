@model Gerador.Models.Clientes

@{
    ViewBag.Title = "Remover";
}

<div>
    <h4>Remover cliente</h4>
    <hr />
	<h5 class="text-danger">Deseja realmente remover este cliente?</h5>
	<dl class="dl-horizontal">
		<dt>
			<span>Responsável</span>
			@*@Html.DisplayNameFor(model => model.User.Email)*@
		</dt>

		<dd>
			@Html.DisplayFor(model => model.User.Email)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.TipoPessoa)
		</dt>

		<dd>
			@if (Model.TipoPessoa == 0)
			{
				<span>Pessoa Física</span>
			}
			else
			{
				<span>Pessoa Jurídica</span>
			}
			@*@Html.DisplayFor(model => model.TipoPessoa)*@
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Nome)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Nome)
		</dd>

		<dt>
			@if (Model.TipoPessoa == 0)
			{
				<span>CPF</span>
			}
			else
			{
				<span>CNPJ</span>
			}
			@*@Html.DisplayNameFor(model => model.CpfCnpj)*@
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CpfCnpj)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Renda)
		</dt>

		<dd>
			R$ @Html.DisplayFor(model => model.Renda)
		</dd>

	</dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
