@model IEnumerable<Gerador.Models.Clientes>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo cliente", "Create", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
</p>
<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>
				@Html.DisplayNameFor(model => model.User.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TipoPessoa)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CpfCnpj)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Sexo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Profissao)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataNascimento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Renda)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EstadoCivil)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RegimeCasamento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Conjuge_Cpf)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Conjuge_Nome)
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			foreach (var item in Model)
			{
			<tr>
				<td>
					<div id="menuGerenciar" class="btn-group">
						<div class="btn-group">
							<a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
								Menu
								<span class="caret"></span>
							</a>
							<ul class="dropdown-menu">
								<li><a href="@Url.Action("Editar", "Clientes", new { id = item.IDCliente })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a></li>
								<li><a href="@Url.Action("Detalhes", "Clientes", new { id = item.IDCliente })"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Detalhes</a></li>
								<li class="divider"></li>
								<li><a href="@Url.Action("Remover", "Clientes", new { id = item.IDCliente }, null)"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Remover</a></li>
							</ul>
						</div>
					</div>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.User.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TipoPessoa)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CpfCnpj)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Sexo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Profissao)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataNascimento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Renda)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EstadoCivil)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RegimeCasamento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Conjuge_Cpf)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Conjuge_Nome)
				</td>

			</tr>
			}
		} else
		{
			<tr>
				<td>
					<span>Nenhum cliente encontrado.</span>
				</td>
			</tr>
		}
	</tbody>
</table>
