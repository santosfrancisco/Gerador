@model IEnumerable<Gerador.Models.Empreendimentos>

@{
    ViewBag.Title = "Lista de empreendimentos";
}

<h2>Lista de Empreendimentos</h2>

<p>
    @Html.ActionLink("Novo empreendimento", "Create", null, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
</p>

<table class="table table-hover">
	<thead>
		<tr>

			<th>

			</th>
			<th>
				@Html.DisplayNameFor(model => model.IDEmpresa)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataEntrega)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Produto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Campanha)
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			foreach (var item in Model)
			{

			<tr>
				<td>
					<div id="menuGerenciar" class="btn-group">
						<div class="btn-group">
							<a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
								Menu
								<span class="caret"></span>
							</a>
							<ul class="dropdown-menu">
								<li><a href="@Url.Action("Edit", "Empreendimentos", new { id = item.IDEmpreendimento })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a></li>
								<li><a href="@Url.Action("Details", "Empreendimentos", new { id = item.IDEmpreendimento })"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Detalhes</a></li>
								<li><a href="@Url.Action("Create", "Unidades", new { id = item.IDEmpreendimento }, null)"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Adicionar unidades</a></li>
								<li><a href="@Url.Action("Upload", "Unidades", new { id = item.IDEmpreendimento }, null)"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Adicionar unidades (planilha)</a></li>
								<li class="divider"></li>
								<li><a href="@Url.Action("Delete", "Empreendimentos", new { id = item.IDEmpreendimento })"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Deletar</a></li>
							</ul>
						</div>
					</div>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Empresas.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataEntrega)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Produto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Campanha)
				</td>

			</tr>
			}
		} else
		{
			<tr>
				<td>
					<span>Nenhum empreendimento encontrado.</span>
				</td>
			</tr>
		}
	</tbody>
</table>
