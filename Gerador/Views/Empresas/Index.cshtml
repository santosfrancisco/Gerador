<div id="addEmpresa" style="text-align:right">
    <a href="@Url.Action("Create","Empresas", null)" class="btn btn-primary btn-xs"><span class="fa fa-plus-square"></span> Nova empresa</a>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>

			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Responsavel)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Responsavel_Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Responsavel_Telefone)
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
			{
				foreach (var item in Model)
				{
				<tr>
					<td>
						<div id="menuGerenciar" class="btn-group">
							<div class="btn-group">
							    <a href="#" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
									Menu
									<span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<li><a href="@Url.Action("Edit", "Empresas", new { id = item.IDEmpresa })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a></li>
									<li><a href="@Url.Action("Details", "Empresas", new { id = item.IDEmpresa })"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Detalhes</a></li>
									<li class="divider"></li>
									<li><a href="@Url.Action("Delete", "Empresas", new { id = item.IDEmpresa }, null)"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Remover</a></li>
								</ul>
							</div>
						</div>
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Responsavel)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Responsavel_Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Responsavel_Telefone)
					</td>

				</tr>
				}
			}
			else
			{
			<tr>
				<td>
					<span>Nenhuma empresa encontrada.</span>
				</td>
			</tr>
			}
	</tbody>
</table>