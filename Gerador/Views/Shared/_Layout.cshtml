<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Credex - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container shadow">
        <div class="navbar navbar-default navbar-fixed-top shadow">
            <div class="container">
                <div class="navbar-header">

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*<a href="@Url.Action("Index", "Home")"><img class="navbar-brand" src="~/Content/images/logo_mini.png" /></a>*@
                    @Html.ActionLink("CREDEX", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Index", "Home")"><span class="fa fa-home"></span> Início</a></li>
                            <li><a href="@Url.Action("Index", "Clientes")"><span class="fa fa-users"></span> Clientes</a></li>
                            <li><a href="@Url.Action("Index", "Analises")"><span class="fa fa-calculator"></span> Análises</a></li>
                            <li><a href="@Url.Action("Administracao", "Home")"><span class="fa fa-cogs"></span> Administração</a></li>
                            @*<li>@Html.ActionLink("Sobre", "About", "Home")</li>*@
                            @*<li>@Html.ActionLink("Contato", "Contact", "Home")</li>*@
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="panel panel-body">
            @RenderBody()
        </div>
        <footer>
            <hr />
            <div class="panel panel-collapse" style="text-align:center">
                <img src="~/Content/logo.jpg" /><br />
                <span class=""><span class="fa fa-phone"></span> 11-50817969<br /><span class="fa fa-envelope"></span> analistas@isibr.com.br</span>
            </div>
        </footer>
    </div>
    <a href="@Url.Content("http://www.anapro.com.br")" target="_blank"><div id="anapro-love" class="btn">feito com <i style="color:red" class="fa fa-heart" title="Amor"></i> pela <b>ANAPRO</b></div></a>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
