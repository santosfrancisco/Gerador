<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Credex - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Credex", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("Sobre", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contato", "Contact", "Home")</li>*@
					<li>@Html.ActionLink("Administração", "Administracao", "Home")</li>
					<li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Administrador")) {
                        <li>@Html.ActionLink("Permissões", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Usuários", "Index", "UsersAdmin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
		<div class="panel panel-body">
			@RenderBody()
		</div>
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
			<div class="panel panel-collapse" style="text-align:center">
				<img src="~/Content/logo.jpg" /><br />
				<span class=""><span class="glyphicon glyphicon-phone-alt"></span> 11-50817969<br /><span class="glyphicon glyphicon-envelope"></span> analistas@isibr.com.br</span>
			</div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
