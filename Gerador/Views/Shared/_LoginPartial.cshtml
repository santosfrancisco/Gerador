@using Microsoft.AspNet.Identity
@using Gerador.Models;

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="fa fa-user"></span> @Html.Action("NomeUsuario", "Account", null).ToHtmlString() <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                <li><a href="@Url.Action("Index", "Manage",null)"><span class="fa fa-newspaper-o" aria-hidden="true"></span> Meu perfil</a></li>
                @*<li class="divider"></li>*@
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="fa fa-sign-out"></span> Sair</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Bem vindo, registre-se!", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Entrar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
